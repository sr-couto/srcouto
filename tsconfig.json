{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "types": [
      "node",
      "astro/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "jsxImportSource": "react"
  }
}