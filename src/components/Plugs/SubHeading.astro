---
const { title, link, ariaLabel } = Astro.props;
---

<div class="Container">
  <h2 class="Title">
    <span class="Misc">{title}</span>
  </h2>
  {
    link && (
      <a
        href="/traducciones"
        aria-label={ariaLabel}
        class="flex items-center justify-between w-32 cursor-pointer text-xs uppercase duration-300 dark:text-white group"
      >
