---
const { title, subtitle } = Astro.props;
---

<h1 class="Title">{title}</h1>
{subtitle && <h2 class="Subtitle">{subtitle}</h2>}

<style>
  @reference "@/styles/globals.css";
  .Title {
    @apply mb-4 font-serif w-full text-left text-4xl font-medium md:text-3xl;
    @apply text-white border-gray-800;
  }

  .Subtitle {
    @apply relative block mb-6 font-serif text-xl;
    @apply text-white border-gray-800;
    text-wrap: balance;
  }
</style>
