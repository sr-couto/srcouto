---
import BlogPost from "@/components/BlogPost/BlogPost.astro";
import Footer from "@/components/Footer/Footer.astro";
import SubHeading from "@/components/Plugs/SubHeading.astro";
import Separator from "@/components/BlogPost/Separator.astro";
import Layout from "@/layouts/LayoutBase.astro";
import { getCollection } from "astro:content";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    minutesRead?: string;
    sourceUrl?: string;
    sourceText?: string;
  };
}

const { content } = Astro.props;

const posts = await getCollection("traducciones");

const myFeaturedPost = posts.filter((post) => post.data.featured);
---

<Layout>
  <article class="px-6 md:px-3">
    <div class="w-full pt-24 mx-auto sm:px-10 sm:max-w-3xl">
      <h1 class="mb-4 font-serif text-3xl font-medium text-white md:text-4xl">
        {content.title}
      </h1>
      <h2 class="relative block mb-6 font-serif text-xl text-white md:text-xl">
        {content.description}
      </h2>
      <Separator />
      <div
        class="flex items-center justify-between w-full mx-auto my-3 text-gray-300"
      >
        <div class="flex items-center justify-start">
          <div class="flex items-center">
            {
              content.pubDate && (
                <time class="text-base capitalize font-caption ">
                  {content.pubDate}
                </time>
              )
            }
          </div>
          <span class="px-4">•</span>
          <div class="text-base font-caption min-w-32 md:mt-0">
            {content.minutesRead} de lectura
          </div>
        </div>
        {
          content.sourceUrl && (
            <a
              href={content.sourceUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="text-base font-caption text-white! min-w-32 md:mt-0 underline underline-offset-2"
            >
              Ir a la Fuente
            </a>
          )
        }
      </div>
      <Separator />
      <div class="py-3 font-mono text-xs text-left">
        {content.sourceText}
      </div>
    </div>
    <div
      class="w-full pt-6 pb-12 prose-content hyphens "
    >
      <slot />
    </div>
    <Separator />
  </article>
  <aside class="w-full max-w-3xl mx-auto sm:px-14">
    <SubHeading
      title="Más traducciones"
      ariaLabel="Ver más contenido de traducciones"
      link
    />
  <div class="grid gap-2">
    {
      myFeaturedPost.map((post) => (
        <BlogPost
          title={post.data.title}
          description={post.data.description}
          url={`/traducciones/${post.slug}`}
        />
      ))
    }
    </div>
  </aside>

  <Footer />
</Layout>

<style is:global>
  @reference "@/styles/globals.css";

  /* Container */
  .prose-content {
    color: var(--tw-prose-body);
    max-width: 67ch;
    font-size: 1.125rem;
    line-height: 1.75;
    font-family: var(--font-serif);
  }

  .prose-content > * {
    max-width: 48rem;
    margin-left: auto;
    margin-right: auto;
  }

  /* Headings */
  .prose-content h1,
  .prose-content h2,
  .prose-content h3,
  .prose-content h4,
  .prose-content h5,
  .prose-content h6 {
    color: var(--tw-prose-headings);
    font-weight: 600;
    line-height: 1.25;
    margin-top: 2em;
    margin-bottom: 0.75em;
    scroll-margin-top: 6rem;
    @apply sm:px-10;
  }

  .prose-content h1 {
    font-size: 2.25em;
    margin-bottom: 0.8em;
    margin-top: 0;
    line-height: 1.1;
  }

  .prose-content h2 {
    font-size: 1.75em;
    margin-top: 2em;
    margin-bottom: 0.75em;
    padding-bottom: 0.3em;
    border-bottom: 1px solid var(--tw-prose-hr);
  }

  .prose-content h3 {
    font-size: 1.375em;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .prose-content h4 {
    font-size: 1.125em;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .prose-content h5 {
    font-size: 1em;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .prose-content h6 {
    font-size: 0.875em;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    color: var(--tw-prose-captions);
  }

  /* Paragraphs */
  .prose-content p {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    color: var(--tw-prose-body);
    @apply sm:px-10;
  }

  .prose-content p:first-child {
    margin-top: 0;
  }

  /* Links */
  .prose-content a {
    color: var(--tw-prose-links);
    text-decoration: underline;
    text-underline-offset: 0.15em;
    font-weight: 500;
    transition: color 0.15s ease;
  }

  .prose-content a:hover {
    color: var(--tw-prose-links-hover);
  }

  /* Lists */
  .prose-content ul,
  .prose-content ol {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.625em;
    @apply sm:px-10;
  }

  .prose-content ul {
    list-style-type: disc;
  }

  .prose-content ol {
    list-style-type: decimal;
  }

  .prose-content li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    padding-left: 0.375em;
  }

  .prose-content ul > li::marker,
  .prose-content ol > li::marker {
    color: var(--tw-prose-bullets);
  }

  .prose-content ul ul,
  .prose-content ul ol,
  .prose-content ol ul,
  .prose-content ol ol {
    margin-top: 0.75em;
    margin-bottom: 0.75em;
  }

    /* Nested lists */
  .prose-content ul p {
    padding: 0
  }

  /* Nested lists */
  .prose-content ul ul {
    list-style-type: circle;
  }

  .prose-content ul ul ul {
    list-style-type: square;
  }

  /* Description lists */
  .prose-content dt {
    font-weight: 600;
    margin-top: 1.25em;
  }

  .prose-content dd {
    margin-top: 0.25em;
    padding-left: 1.625em;
  }

  /* Blockquotes */
  .prose-content blockquote {
    margin-top: 2em;
    margin-bottom: 2em;
    padding-left: 1.625em;
    padding-right: 1.625em;
    border-left: 0.25rem solid var(--tw-prose-quote-borders);
    font-style: italic;
    color: var(--tw-prose-quotes);
    @apply sm:mx-10;
  }

  .prose-content blockquote p:first-of-type::before {
    content: open-quote;
  }

  .prose-content blockquote p:last-of-type::after {
    content: close-quote;
  }

  .prose-content blockquote p {
    margin-top: 0;
    margin-bottom: 0;
    @apply sm:px-0;
  }

  .prose-content blockquote cite {
    display: block;
    margin-top: 1em;
    font-size: 0.875em;
    font-style: normal;
    color: var(--tw-prose-captions);
  }

  .prose-content blockquote cite::before {
    content: "— ";
  }

  /* Horizontal Rule */
  .prose-content hr {
    margin-top: 3em;
    margin-bottom: 3em;
    border: 0;
    border-top: 1px solid var(--tw-prose-hr);
  }

  /* Code */
  .prose-content code {
    color: var(--tw-prose-code);
    font-weight: 600;
    font-size: 0.875em;
    background-color: var(--tw-prose-code-bg);
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  }

  .prose-content code::before,
  .prose-content code::after {
    content: "`";
  }

  .prose-content pre {
    color: var(--tw-prose-pre-code);
    background-color: var(--tw-prose-pre-bg);
    overflow-x: auto;
    font-size: 0.875em;
    line-height: 1.7;
    margin-top: 1.75em;
    margin-bottom: 1.75em;
    border-radius: 0.375rem;
    padding: 0.875em 1.125em;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  }

  .prose-content pre code {
    background-color: transparent;
    border-radius: 0;
    padding: 0;
    font-weight: inherit;
    color: inherit;
    font-size: inherit;
    font-family: inherit;
    line-height: inherit;
  }

  .prose-content pre code::before,
  .prose-content pre code::after {
    content: none;
  }

  /* Images and Figures */
  .prose-content img,
  .prose-content video {
    margin-top: 2em;
    margin-bottom: 2em;
    max-width: 100%;
    height: auto;
    border-radius: 0.375rem;
  }

  .prose-content figure {
    margin-top: 2em;
    margin-bottom: 2em;
  }

  .prose-content figure > * {
    margin-top: 0;
    margin-bottom: 0;
  }

  .prose-content figcaption {
    color: var(--tw-prose-captions);
    font-size: 0.875em;
    line-height: 1.4;
    margin-top: 0.75em;
    text-align: center;
  }

  /* Tables */
  .prose-content table {
    width: 100%;
    table-layout: auto;
    text-align: left;
    margin-top: 2em;
    margin-bottom: 2em;
    font-size: 0.875em;
    line-height: 1.7;
    border-collapse: collapse;
  }

  .prose-content thead {
    border-bottom: 1px solid var(--tw-prose-th-borders);
  }

  .prose-content thead th {
    color: var(--tw-prose-headings);
    font-weight: 600;
    vertical-align: bottom;
    padding: 0 0.75em 0.75em 0;
    text-align: left;
  }

  .prose-content tbody tr {
    border-bottom: 1px solid var(--tw-prose-td-borders);
  }

  .prose-content tbody tr:last-child {
    border-bottom: 0;
  }

  .prose-content tbody td {
    vertical-align: baseline;
    padding: 0.75em 0.75em 0.75em 0;
  }

  /* Text formatting */
  .prose-content strong {
    color: var(--tw-prose-bold);
    font-weight: 600;
  }

  .prose-content em {
    font-style: italic;
  }

  .prose-content del {
    text-decoration: line-through;
  }

  .prose-content s {
    text-decoration: line-through;
  }

  .prose-content mark {
    background-color: var(--tw-prose-mark-bg);
    color: var(--tw-prose-mark);
    padding: 0.125em 0.25em;
    border-radius: 0.125rem;
  }

  /* Superscript and Subscript */
  .prose-content sub,
  .prose-content sup {
    font-size: 0.75em;
    line-height: 0;
    position: relative;
    vertical-align: baseline;
  }

  .prose-content sup {
    top: -0.5em;
  }

  .prose-content sub {
    bottom: -0.25em;
  }

  /* Keyboard */
  .prose-content kbd {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.875em;
    font-weight: 500;
    background-color: var(--tw-prose-kbd-bg);
    border: 1px solid var(--tw-prose-kbd-border);
    border-radius: 0.25rem;
    padding: 0.1875em 0.375em;
    box-shadow: 0 1px 0 var(--tw-prose-kbd-shadow);
  }

  /* Abbreviations */
  .prose-content abbr[title] {
    text-decoration: underline dotted;
    cursor: help;
  }

  /* Selection */
  .prose-content ::selection {
    background-color: var(--tw-prose-selection-bg);
    color: var(--tw-prose-selection);
  }

  /* Lead paragraph */
  .prose-content .lead {
    font-size: 1.25em;
    line-height: 1.6;
    margin-top: 1.2em;
    margin-bottom: 1.2em;
    color: var(--tw-prose-lead);
  }

  /* Small text */
  .prose-content small {
    font-size: 0.875em;
  }

  /* Address */
  .prose-content address {
    font-style: normal;
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }

  /* Details/Summary */
  .prose-content details {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }

  .prose-content summary {
    font-weight: 600;
    cursor: pointer;
  }

  /* Definition lists */
  .prose-content dl {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }

  /* Quotes */
  .prose-content q {
    quotes: "\201C" "\201D" "\2018" "\2019";
  }

  .prose-content q::before {
    content: open-quote;
  }

  .prose-content q::after {
    content: close-quote;
  }

  /* Audio and Video */
  .prose-content audio,
  .prose-content iframe,
  .prose-content embed,
  .prose-content object {
    margin-top: 2em;
    margin-bottom: 2em;
  }

  /* Canvas */
  .prose-content canvas {
    margin-top: 2em;
    margin-bottom: 2em;
  }

  /* SVG */
  .prose-content svg {
    display: inline;
    vertical-align: middle;
  }

  /* Focus styles for accessibility */
  .prose-content a:focus-visible,
  .prose-content summary:focus-visible {
    outline: 2px solid var(--tw-prose-links);
    outline-offset: 2px;
    border-radius: 0.125rem;
  }

  /* Responsive adjustments */
  @media (min-width: 640px) {
    .prose-content {
      font-size: 1.25rem;
      line-height: 1.75;
    }

    .prose-content h1 {
      font-size: 2.5em;
    }

    .prose-content h2 {
      font-size: 2em;
    }

    .prose-content h3 {
      font-size: 1.5em;
    }

    .prose-content h4 {
      font-size: 1.25em;
    }
  }

  /* Print styles */
  @media print {
    .prose-content {
      font-size: 12pt;
      line-height: 1.5;
    }

    .prose-content a {
      text-decoration: underline;
      color: inherit;
    }

    .prose-content a[href]::after {
      content: " (" attr(href) ")";
      font-size: 0.875em;
      opacity: 0.8;
    }

    .prose-content pre {
      white-space: pre-wrap;
      word-wrap: break-word;
      border: 1px solid #ccc;
    }
  }

  .prose-content.hyphens p {
   hyphens: auto
  }

  .prose-content.hyphens blockquote p {
    hyphens: none;
    text-wrap: balance
  }

  /* Dark mode CSS variables - adjust these to match your theme */
  :root {
    --tw-prose-body: #374151;
    --tw-prose-headings: #111827;
    --tw-prose-lead: #4b5563;
    --tw-prose-links: #2563eb;
    --tw-prose-links-hover: #1d4ed8;
    --tw-prose-bold: #111827;
    --tw-prose-counters: #6b7280;
    --tw-prose-bullets: #d1d5db;
    --tw-prose-hr: #e5e7eb;
    --tw-prose-quotes: #111827;
    --tw-prose-quote-borders: #e5e7eb;
    --tw-prose-captions: #6b7280;
    --tw-prose-code: #111827;
    --tw-prose-code-bg: #f3f4f6;
    --tw-prose-pre-code: #e5e7eb;
    --tw-prose-pre-bg: #1f2937;
    --tw-prose-th-borders: #e5e7eb;
    --tw-prose-td-borders: #e5e7eb;
    --tw-prose-mark: #111827;
    --tw-prose-mark-bg: #fef3c7;
    --tw-prose-selection: #ffffff;
    --tw-prose-selection-bg: #2563eb;
    --tw-prose-kbd-bg: #f3f4f6;
    --tw-prose-kbd-border: #d1d5db;
    --tw-prose-kbd-shadow: #9ca3af;
  }

  .dark {
    --tw-prose-body: #f1f1f1;
    --tw-prose-headings: #f9fafb;
    --tw-prose-lead: #9ca3af;
    --tw-prose-links: #60a5fa;
    --tw-prose-links-hover: #93c5fd;
    --tw-prose-bold: #f9fafb;
    --tw-prose-counters: #9ca3af;
    --tw-prose-bullets: #4b5563;
    --tw-prose-hr: #374151;
    --tw-prose-quotes: #f9fafb;
    --tw-prose-quote-borders: #374151;
    --tw-prose-captions: #9ca3af;
    --tw-prose-code: #f9fafb;
    --tw-prose-code-bg: #1f2937;
    --tw-prose-pre-code: #e5e7eb;
    --tw-prose-pre-bg: #111827;
    --tw-prose-th-borders: #374151;
    --tw-prose-td-borders: #374151;
    --tw-prose-mark: #f9fafb;
    --tw-prose-mark-bg: #78350f;
    --tw-prose-selection: #ffffff;
    --tw-prose-selection-bg: #3b82f6;
    --tw-prose-kbd-bg: #374151;
    --tw-prose-kbd-border: #4b5563;
    --tw-prose-kbd-shadow: #1f2937;
  }
</style>


<style is:global>
  .gdesc-inner.gdesc-inner {
    padding: 0.5rem !important;
    text-align: center !important;
  }

  .glightbox-clean .gslide-description {
    background: transparent !important;
    
  }

  .gdesc-inner .gslide-title {
    font-family: var(--font-mono) !important;
    font-size: var(--text-xs) !important;
    color: #fff !important;
    max-width: 70ch;
    margin: 0 auto;
  }


</style>
