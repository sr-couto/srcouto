---
import Layout from "@/layouts/PageFull.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/config";
import Heading from "@/components/Plugs/Heading.astro";
import { getCollection, getEntry } from "astro:content";
import Footer from "@/components/Footer/Footer.astro";
const posts = await getCollection("extractos");
---

<Layout bodyClass="extractos">
  <div class="w-full px-4 ">
    <div
      class="pt-24 flex justify-center mx-auto items-start w-full flex-col max-w-3xl sm:px-12"
    >
      <Heading title="Extractos" subtitle="Colección de pequeños textos." />
    </div>
    <section class="w-full min-h-screen max-w-2xl mx-auto flex flex-col gap-12">
      {
        posts.map((post) => (
          <article class="font-serif grid gap-1 bg-primary-foreground/50 backdrop-blur-sm p-8 sm:p-12 rounded-md overflow-hidden shadow relative">
            <h2 class="text-2xl font-bold">{post.data.title}</h2>
            <p>
              <i>— {post.data.description} —</i>
            </p>
            <q>{post.body}</q>
          </article>
        ))
      }
    </section>
    <div>
      <Footer />
    </div>
  </div>
</Layout>
